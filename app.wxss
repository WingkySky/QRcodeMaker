/* app.wxss */
page {
  --primary-color: #1296db;
  --background-color: #f6f6f6;
  --text-color: #333333;
  --border-color: #eeeeee;

  background-color: var(--background-color);
  font-size: 28rpx;
  color: var(--text-color);
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

.card {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.btn-primary {
  background-color: var(--primary-color);
  color: #ffffff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
}

.btn-primary:active {
  opacity: 0.8;
}

.input-box {
  background: #ffffff;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
