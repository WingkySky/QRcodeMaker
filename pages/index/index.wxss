/* 类型选择器样式 */
.type-selector {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
}

.type-item.active {
  background-color: rgba(18, 150, 219, 0.1);
}

.type-item image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
}

.type-item text {
  font-size: 28rpx;
  color: var(--text-color);
}

/* 输入区域样式 */
.input-area {
  margin-bottom: 30rpx;
}

textarea.input-box {
  width: 100%;
  height: 200rpx;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 图片选择器样式 */
.image-picker {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  background-color: #f8f8f8;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
}

.image-picker image {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 20rpx;
}

.selected-image {
  width: 100%;
}

.selected-image image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
}

.image-actions {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  gap: 20rpx;
}

.btn-small {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  min-width: 160rpx;
}

.btn-danger {
  background-color: #ff4d4f;
  color: #fff;
}

/* 预览区域样式 */
.preview-area {
  margin-top: 30rpx;
}

.qrcode {
  width: 100%;
  height: 500rpx;
  margin: 20rpx 0;
}

.action-buttons {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}

.action-buttons button {
  margin: 0;
  min-width: 200rpx;
}
