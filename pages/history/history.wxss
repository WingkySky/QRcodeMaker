.title {
  font-size: 36rpx;
  font-weight: bold;
  padding: 30rpx;
  text-align: center;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  color: #999;
  font-size: 28rpx;
}

/* 历史记录列表样式 */
.history-list {
  padding: 0 20rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.history-item .qrcode {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.history-item .info {
  flex: 1;
  margin-right: 20rpx;
}

.history-item .type {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.history-item .type image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.history-item .content {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.history-item .time {
  font-size: 24rpx;
  color: #999;
}

.history-item .actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.history-item .actions button {
  margin: 0;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  min-width: 120rpx;
}

/* 清空按钮样式 */
.clear-all {
  padding: 30rpx 20rpx;
}

.clear-all button {
  width: 100%;
}
