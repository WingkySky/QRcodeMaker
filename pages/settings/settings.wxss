.title {
  font-size: 36rpx;
  font-weight: bold;
  padding: 30rpx;
  text-align: center;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: var(--text-color);
}

/* 设置项样式 */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 2rpx solid var(--border-color);
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item text {
  font-size: 28rpx;
  color: var(--text-color);
}

/* 颜色选择器样式 */
.color-picker {
  display: flex;
  align-items: center;
}

.color-preview {
  width: 40rpx;
  height: 40rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  border: 2rpx solid var(--border-color);
}

.color-picker input {
  width: 160rpx;
  padding: 10rpx;
  font-size: 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
}

/* 滑块样式 */
slider {
  width: 400rpx;
}

/* 选择器样式 */
.picker {
  padding: 10rpx 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 关于项样式 */
.about-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid var(--border-color);
}

.about-item:last-child {
  border-bottom: none;
}

.about-item text {
  font-size: 28rpx;
  color: var(--text-color);
}

/* 按钮样式 */
.card button {
  margin-top: 30rpx;
}

.btn-danger {
  background-color: #ff4d4f;
  color: #ffffff;
}
