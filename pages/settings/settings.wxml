<view class="container">
  <view class="title">设置</view>

  <!-- 二维码样式设置 -->
  <view class="card">
    <view class="section-title">二维码样式</view>
    
    <!-- 前景色 -->
    <view class="setting-item">
      <text>前景色</text>
      <view class="color-picker">
        <view class="color-preview" style="background-color: {{style.foreground}}"></view>
        <input type="text" value="{{style.foreground}}" bindinput="handleForegroundChange"/>
      </view>
    </view>

    <!-- 背景色 -->
    <view class="setting-item">
      <text>背景色</text>
      <view class="color-picker">
        <view class="color-preview" style="background-color: {{style.background}}"></view>
        <input type="text" value="{{style.background}}" bindinput="handleBackgroundChange"/>
      </view>
    </view>

    <!-- 大小 -->
    <view class="setting-item">
      <text>大小</text>
      <slider min="200" max="500" step="10" value="{{style.size}}" bindchange="handleSizeChange" show-value/>
    </view>

    <!-- 边距 -->
    <view class="setting-item">
      <text>边距</text>
      <slider min="0" max="20" value="{{style.margin}}" bindchange="handleMarginChange" show-value/>
    </view>
  </view>

  <!-- 基本设置 -->
  <view class="card">
    <view class="section-title">基本设置</view>
    
    <!-- 图片大小限制 -->
    <view class="setting-item">
      <text>图片大小限制</text>
      <picker bindchange="handleSizeLimitChange" value="{{sizeLimitIndex}}" range="{{sizeLimits}}">
        <view class="picker">{{sizeLimits[sizeLimitIndex]}}MB</view>
      </picker>
    </view>
  </view>

  <!-- 关于信息 -->
  <view class="card">
    <view class="section-title">关于</view>
    <view class="about-item">
      <text>版本</text>
      <text>1.0.0</text>
    </view>
    <view class="about-item">
      <text>开发者</text>
      <text>Your Name</text>
    </view>
    <button class="btn-primary" bindtap="contactDeveloper">联系开发者</button>
  </view>

  <!-- 重置按钮 -->
  <view class="card">
    <button class="btn-danger" bindtap="resetSettings">恢复默认设置</button>
  </view>
</view> 