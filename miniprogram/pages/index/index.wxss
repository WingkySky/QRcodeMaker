/* 类型选择器样式 */
.type-selector {
  display: flex;
  justify-content: space-around;
  background-color: #ffffff;
  padding: 20rpx;
  margin-bottom: 30rpx;
  border-radius: 12rpx;
}

.type-item {
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
}

.type-item.active {
  background-color: var(--primary-color);
  color: #ffffff;
}

/* 输入区域样式 */
.input-area {
  margin-bottom: 30rpx;
}

textarea.input-box {
  width: 100%;
  height: 200rpx;
}

.text-counter {
  text-align: right;
  color: #999999;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.image-picker {
  width: 100%;
  height: 300rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 2rpx dashed var(--border-color);
  border-radius: 12rpx;
}

.image-picker text {
  color: #999999;
  margin-top: 20rpx;
}

.selected-image {
  width: 100%;
}

.selected-image image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
}

.image-actions {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  gap: 20rpx;
}

.btn-small {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  min-width: 160rpx;
}

.btn-danger {
  background-color: #ff4d4f;
  color: #ffffff;
}

/* 预览区域样式 */
.preview-area {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qr-code {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 30rpx;
}

.action-buttons {
  display: flex;
  gap: 30rpx;
}

.btn-action {
  font-size: 28rpx;
  padding: 15rpx 40rpx;
  background-color: #ffffff;
  border: 2rpx solid var(--primary-color);
  color: var(--primary-color);
  border-radius: 8rpx;
} 